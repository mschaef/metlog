<configuration debug="false">

  <!-- File Appender -->
  
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/var/log/metlog-vault/metlog-vault.log</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover. Make sure the path matches the one in the file element or else
           the rollover logs are placed in the working directory. -->
      <fileNamePattern>/var/log/metlog-vault/metlog_vault_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      
      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>5MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <!-- keep 30 days' worth of history -->
      <maxHistory>30</maxHistory>
    </rollingPolicy>    

    <encoder>
      <pattern>%d [%t] %-5p %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="metlog-vault.core" level="INFO"/>

  <root level="WARN">
    <appender-ref ref="FILE"/>
  </root>
  
</configuration>
